@model IEnumerable<JCIEstimate.Models.ScopeOfWork>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
@if (User.IsInRole("Admin")) {
    @Html.ActionLink("Create New", "Create")
}
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.category1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Project.project1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.scopeOfWork1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.scopeOfWorkDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.version)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.documentName)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.category1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.project1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.scopeOfWork1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.scopeOfWorkDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.version)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.documentName)
        </td>
        <td>
            @Html.ActionLink("Get Scope Document", "GetScopeDocument", new { scopeOfWorkUid = item.scopeOfWorkUid })
        </td>
        <td>
            @if (User.IsInRole("Admin")) { 
            @Html.ActionLink("Delete", "Delete", new { id=item.scopeOfWorkUid })
            }
        </td>
    </tr>
