@model JCIEstimate.Models.ContractorSignoffFinal

@{
    ViewBag.Title = "GenerateSignoff";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.contractorSignoffFinalUid)

        
        <div class="form-group">
            @Html.LabelFor(model => model.contractorUid, null, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("contractorUid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.contractorUid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Signoff Type", null, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <table class="table-condensed">
                    <tr>
                        <td>Proposed</td>
                        <td>@Html.RadioButton("mode", "proposed", true)</td>
                    </tr>
                    <tr>
                        <td>Final</td>
                        <td>@Html.RadioButton("mode", "final")</td>
                    </tr>
                </table>
            </div>
        </div>

        


        <div class="form-group" style="color:green;">
            <div class="col-md-offset-2 col-md-10">
                @ViewBag.message
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Generate" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("View Proposed Signoffs", "Index", "ContractorSignoffs")<br/>
    @Html.ActionLink("View Final Signoffs", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
