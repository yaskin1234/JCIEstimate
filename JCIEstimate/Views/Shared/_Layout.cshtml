<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JCI Estimate</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated && User.IsInRole("Admin") ) {
                    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin</a>
                        <ul class="dropdown-menu">                            
                            <li>@Html.ActionLink("Roles Admin", "Index", "RolesAdmin")</li>
                            <li>@Html.ActionLink("Users Admin", "Index", "UsersAdmin")</li>                                              
                        </ul>
                    </li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">System Setup</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
                                <li>@Html.ActionLink("Projects", "Index", "Projects")</li>                             
                                <li>@Html.ActionLink("Misc Expenses", "Index", "ExpenseMiscellaneous")</li>                               
                                <li>--------------------------</li>
                                <li>@Html.ActionLink("Estimate Status", "Index", "EstimateStatus")</li>                                                                
                                <li>@Html.ActionLink("Equipment Tasks", "Index", "EquipmentTasks")</li>
                                <li>@Html.ActionLink("Equipment Types", "Index", "EquipmentTypes")</li>
                                <li>@Html.ActionLink("Intervals", "Index", "Intervals")</li>
                                <li>--------------------------</li>
                                <li>@Html.ActionLink("Contractors", "Index", "Contractors")</li>
                                <li>@Html.ActionLink("Contractor Users", "Index", "ContractorUsers")</li> 
                                
                            </ul>
                        </li>
                        if (Session["projectUid"] != null)
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Project Setup</a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("ECMs", "Index", "ECMs")</li>
                                    <li>@Html.ActionLink("Locations", "Index", "Locations")</li>                                                
                                    <li>--------------------------------</li>
                                    <li>@Html.ActionLink("Construction Expenses", "Index", "ExpenseConstructions")</li>                                    
                                    <li>@Html.ActionLink("Percentage Expenses", "Index", "ExpensePercentages")</li>                                    
                                    <li>@Html.ActionLink("Travel Expenses", "Index", "ExpenseTravels")</li> 
                                    <li>@Html.ActionLink("Misc Expenses For Project", "Index", "ExpenseMiscellaneousProjects")</li>                                   
                                    <li>--------------------------------</li>     
                                    <li>@Html.ActionLink("Equipment", "Index", "Equipments")</li>                                    
                                    <li>@Html.ActionLink("Equipment To Do", "Index", "EquipmentToDoes")</li>
                                </ul>
                            </li>
                        }

                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Admin") && Session["projectUid"] != null)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Category and ECM By Contractor", "GetCategoryECMByContractor", "Reports")</li>      
                                <li>@Html.ActionLink("Estimate Summary", "GetEstimateSummary", "Reports")</li>     
                                <li>@Html.ActionLink("Bid Summary", "GetBidSummary", "Reports")</li>     
                                
                            </ul>
                        </li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Admin") && Session["projectUid"] != null)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Contractor</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Contacts", "Index", "ContractorContacts")</li>
                                <li>@Html.ActionLink("Email Addresses", "Index", "Eddresses")</li>
                                <li>@Html.ActionLink("Estimates", "Index", "Estimates")</li>
                            </ul>
                        </li>
                    }                    
                    @if (Request.IsAuthenticated && User.IsInRole("Contractor") && Session["projectUid"] != null)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Contractor</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Contacts", "Index", "ContractorContacts")</li>
                                <li>@Html.ActionLink("Email Addresses", "Index", "Eddresses")</li>
                                <li>@Html.ActionLink("Estimates", "Index", "Estimates")</li>
                            </ul>
                        </li>
                    }                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>    
    <div class="container body-content" style="text-align:center;width:100%">
        @if (Request.IsAuthenticated && User.IsInRole("Admin") && Session["bidTotal"] != null)
        {
            <ul class="nav navbar-nav navbar-left">
                <li><a href="" style="color:black;">Bid Total: @String.Format("{0:C0}", Session["bidTotal"])</a></li>
                <li><a href="" style="color:black;">Active Total: @String.Format("{0:C0}", Session["activeTotal"])</a></li>            
            </ul>
        }
        <ul class="nav navbar-nav navbar-right">
            @if (Request.IsAuthenticated && (!(this.Request.Url.AbsolutePath.Equals("/") || this.Request.Url.AbsolutePath.Equals("/Home"))))
            {
                if (Session["projectName"] != null)
                {
                    <li style="font-size:large;">@Html.ActionLink("Active Project: " + Session["projectName"].ToString(), "Index", "Home")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Choose Project", "Index", "Home")</li>
                }
            }
        </ul>
    </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - JCI Estimate</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
