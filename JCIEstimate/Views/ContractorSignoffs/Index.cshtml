@model IEnumerable<JCIEstimate.Models.ContractorSignoff>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.typedName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.attachment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.documentName)
        </th>
        <th>
            Created By
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.typedName)
        </td>
        <td>
            @Html.ActionLink("Get Attachment", "GetContractorSignoff", new { contractorSignoffUid = item.contractorSignoffUid })
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.documentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id=item.contractorSignoffUid }) 
                @Html.ActionLink("Details", "Details", new { id=item.contractorSignoffUid })
                @Html.ActionLink("Delete", "Delete", new { id=item.contractorSignoffUid })    
            }
            
        </td>
    </tr>
}

</table>
