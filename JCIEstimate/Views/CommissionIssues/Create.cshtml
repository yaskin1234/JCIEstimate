@model JCIEstimate.Models.CommissionIssue

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New Commission Issue</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group" id="locationSelection">
            @Html.LabelFor(model => model.Equipment.locationUid, null, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("locationUid", null, htmlAttributes: new { @class = "form-control", @id = "commission_LocationUid" })
                @Html.ValidationMessageFor(model => model.Equipment.locationUid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div id="CommissionDetails" style="display:none">

            <div class="form-group">
                @Html.LabelFor(model => model.equipmentUid, null, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("equipmentUid", null, htmlAttributes: new { @class = "form-control", @id = "commission_EquipmentUid" })
                    @Html.ValidationMessageFor(model => model.equipmentUid, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.commissionIssue1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.commissionIssue1, 5, 40, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.commissionIssue1, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
