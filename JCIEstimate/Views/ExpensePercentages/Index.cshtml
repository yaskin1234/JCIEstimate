@model IEnumerable<JCIEstimate.Models.ExpensePercentage>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Project.project1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.expensePercentage1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.expensePercentageDescription)
        </th>
        <th>
            Project Active Total
        </th>
        <th>
            @Html.DisplayNameFor(model => model.percentage)
        </th>
        <th>
            Expense Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Project.project1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.expensePercentage1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.expensePercentageDescription)
        </td>
        <td>
            @String.Format("{0:C0}", Session["activeTotal"])
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.percentage)
        </td>
        <td>
            @(String.Format("{0:C0}", item.percentage * (Decimal)Session["activeTotal"]))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.expensePercentageUid }) |
            @Html.ActionLink("Details", "Details", new { id=item.expensePercentageUid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.expensePercentageUid })
        </td>
    </tr>
}

</table>
